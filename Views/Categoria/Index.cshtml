@model IEnumerable<Hotel.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nova Categoria", "Inserir")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id=item.IdCategoria }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdCategoria }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.IdCategoria })
        </td>
    </tr>
}

</table>
